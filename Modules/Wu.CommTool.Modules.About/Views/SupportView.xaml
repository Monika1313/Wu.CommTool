<UserControl x:Class="Wu.CommTool.Modules.About.Views.SupportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Wu.CommTool.Modules.About.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <md:DialogHost x:Name="AboutView111"
                   DialogTheme="Inherit"
                   Identifier="AboutView11">
        <md:DrawerHost>
            <ScrollViewer>

                <DockPanel LastChildFill="False">
                    <Grid Height="40" DockPanel.Dock="Top">
                        <TextBlock Style="{StaticResource TitleTextBlock}" Text="支持开发者" />
                        <Button Height="30"
                                Padding="10,5"
                                HorizontalAlignment="Right"
                                Command="{Binding CancelCommand}"
                                Content="✕"
                                Style="{StaticResource MaterialDesignOutlinedButton}" />
                    </Grid>

                    <Image Width="160"
                           Margin="5"
                           DockPanel.Dock="Top"
                           Source="/Wu.CommTool;component/Images/AI.png" />

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                DockPanel.Dock="TOP ">

                        <TextBlock HorizontalAlignment="Center"
                                   Foreground="{StaticResource Orange_Foreground}"
                                   Text="感谢您使用本软件" />
                        <TextBlock HorizontalAlignment="Center"
                                   Foreground="{StaticResource Orange_Foreground}"
                                   Text="如果您觉得本软件有帮助，欢迎赞助支持开发者" />

                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Grid Margin="30,10" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Image Height="150"
                                       DockPanel.Dock="Top"
                                       Source="../Images/wx.png" />
                                <TextBlock Grid.Row="1"
                                           HorizontalAlignment="Center"
                                           Foreground="#07C060"
                                           Text="微信扫码支付" />
                            </Grid>

                            <Grid Margin="30,10" HorizontalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Image Height="150"
                                       DockPanel.Dock="Top"
                                       Source="../Images/zfb.png" />
                                <TextBlock Grid.Row="1"
                                           HorizontalAlignment="Center"
                                           Foreground="#1678FF"
                                           Text="支付宝扫码支付" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </DockPanel>
            </ScrollViewer>
        </md:DrawerHost>
    </md:DialogHost>
</UserControl>
