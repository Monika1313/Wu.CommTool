                            <ListBox Padding="0"
                                     BorderThickness="0"
                                     ItemContainerStyle="{StaticResource MrtuDeviceListBoxItem}"
                                     ItemsSource="{Binding MrtuDeviceManager.MrtuDevices}"
                                     SelectedItem="{Binding MrtuDeviceManager.SelectedMrtuDevice}"
                                     SelectionMode="Single">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="models:MrtuDevice">
                                        <Button Height="80"
                                                Margin="4"
                                                Cursor="Hand"
                                                Style="{StaticResource MaterialDesignOutlinedLightButton}"
                                                Tag="{Binding DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}">
                                            <Button.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Command="{Binding Path=PlacementTarget.Tag.EditMrtuDeviceCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ContextMenu}}}"
                                                              CommandParameter="{Binding}"
                                                              Header="设置" />
                                                    <MenuItem Margin="2"
                                                              Command="{Binding Path=PlacementTarget.Tag.MrtuDeviceManager.AddNewMrtuDeviceCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ContextMenu}}}"
                                                              CommandParameter="{Binding}"
                                                              Header="新建设备" />
                                                    <MenuItem Margin="2"
                                                              Command="{Binding Path=PlacementTarget.Tag.MrtuDeviceManager.DeleteMrtuDeviceCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ContextMenu}}}"
                                                              CommandParameter="{Binding}"
                                                              Foreground="Red"
                                                              Header="删除设备" />
                                                </ContextMenu>
                                            </Button.ContextMenu>
                                            <Button.Content>
                                                <StackPanel>
                                                    <TextBlock Margin="4"
                                                               HorizontalAlignment="Center"
                                                               FontSize="14"
                                                               Text="{Binding Name}" />
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Margin="5,0"
                                                                   FontSize="12"
                                                                   Text="{Binding ComConfig.ComPort.Port}" />
                                                        <TextBlock Margin="2,0"
                                                                   FontSize="12"
                                                                   Text="从站:" />
                                                        <TextBlock FontSize="12" Text="{Binding SlaveAddr}" />
                                                    </StackPanel>
